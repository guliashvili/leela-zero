{
    "include" : [
        "src"
    ],
    "exclude": [
        "node_modules", "lib", "dist", "public"
    ],
    "compileOnSave": true,
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "lib": [
          "dom",
          "dom.iterable",
          "esnext"
        ],
        "allowJs": true,
        "checkJs": true,
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "outDir": "lib",
         "removeComments": true,
        "strict": true,
         "noImplicitAny": false,
         "strictNullChecks": true,
         "strictFunctionTypes": true,
         "strictPropertyInitialization": true,
         "noImplicitThis": false,
         "alwaysStrict": true,
         "noFallthroughCasesInSwitch": true,
       "baseUrl": "./",
       "paths": {
         "components/*": [
            "src/components/*"
         ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
         "experimentalDecorators": true,
         "emitDecoratorMetadata": true
    }
}